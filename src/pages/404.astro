---
import Title from "../components/Title.astro"
import Footer from "../components/Footer.astro"
import "../styles/global.css"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Page Not Found</title>

    <meta name="description" content="Oops! The page you are looking for does not exist.">

    <!-- Open Graph -->
    <meta property="og:title" content="Page Not Found" />
    <meta property="og:description" content="Oops! The page you are looking for does not exist." />
    <meta property="og:type" content="website" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="Page Not Found" />
    <meta name="twitter:description" content="Oops! The page you are looking for does not exist." />

    <script>
      // Redirect to homepage after 3 seconds
      setTimeout(() => {
        window.location.href = "/";
      }, 3000);
    </script>
  </head>

  <body>
    <div id="main-container">
      <Title />
      <div class="error-message" style="margin-top: 20px;">
        <h2>404 - Page Not Found</h2>
        <div style="color: #b0b0b0;">
            <p>Oops! It looks like the page you're looking for doesn't exist.</p>
            <p>You will be redirected to the <a href="/">homepage</a> in 3 seconds.</p>    
        </div>
      </div>
    </div>
    <Footer />
  </body>
</html>
